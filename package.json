{
  "name": "wikidata-cli",
  "version": "0.1.3",
  "description": "Query Wikidata via REST, SPARQL, and Action API with safe, script-friendly output.",
  "type": "module",
  "bin": {
    "wikidata": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "semgrep": "semgrep scan --config auto",
    "gitleaks": "gitleaks detect --source . --redact",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run lint:types && npm run test && npm run build"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.16"
  },
  "license": "MIT"
}
